{
    "name": "sigmie/crawler",
    "type": "library",
    "description": "Sigmie Crawler is a PHP package for crawling websites and exporting their HTML contents.",
    "keywords": [
        "sigmie",
        "crawler"
    ],
    "homepage": "https://github.com/sigmie/crawler",
    "license": "MIT",
    "authors": [
        {
            "name": "Nicoorfi",
            "email": "nico@sigmie.com",
            "homepage": "https://github.com/nicoorfi",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "dbrekelmans/bdi": "^0.3.0",
        "symfony/console": "^5.1",
        "symfony/panther": "^1.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.49",
        "phpunit/phpunit": ">=8.0",
        "squizlabs/php_codesniffer": "^3.0",
        "symfony/var-dumper": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "Sigmie\\Crawler\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sigmie\\Crawler\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "bin": [
        "bin/sigmie-crawl"
    ]
}
